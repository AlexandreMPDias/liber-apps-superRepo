{
	"compilerOptions": {
		"target": "ES2015",
		"module": "CommonJS",
		"rootDir": "./scripts",
		"declaration": false,
		"sourceMap": false,
		"outDir": "./lib",
		"moduleResolution": "node",
		"types": ["node"],
		"lib": ["es2015"],
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"isolatedModules": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"baseUrl": "./scripts",
	},
	"include": ["./scripts/**/*"],
	"exclude": ["node_modules", "lib"]
}
